<% if @user.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
            The form contains <%= pluralize(@user.errors.count,
                                             "error") %>
        </div>
<%# After an invalid form submission. Rails automatically wraps
    the fields with errors in divs within the CSS class 
    field_with_errors. Must provide styling in CSS this class.
%>
        <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>
